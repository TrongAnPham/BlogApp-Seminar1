<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.text_field :commenter, class: 'form-control', autofocus: true, placeholder: 'Commenter' %>
  </p>
  <p>
    <%= f.text_area :body, class: 'form-control', autofocus: true, placeholder: 'Comment' %>
  </p>
  <p>
    <%= f.submit "Create Comment", class: "btn btn-s btn-success" %>
  </p>
<% end %>