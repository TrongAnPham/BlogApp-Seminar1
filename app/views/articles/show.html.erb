<div class="panel panel-success">
            <div class="panel-heading">
              <h3 class="panel-title"><%= @article.title %></h3>
            </div>
            <div class="panel-body">
              <%= @article.text %>
            </div>
            </div>

            <td><%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-primary' %></td>
			<td><%= link_to 'Delete', article_path(@article), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' }%></td> 
			<td><%= link_to 'Back', articles_path, class: 'btn btn-info' %></td>

<h2>Comments</h2>
<%= render @article.comments %>
 
<h2>Add a comment:</h2>
<%= render 'comments/form' %>